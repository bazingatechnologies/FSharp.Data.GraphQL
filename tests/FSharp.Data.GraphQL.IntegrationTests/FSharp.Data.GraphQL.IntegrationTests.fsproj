<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp2.1;netcoreapp3.1;net48</TargetFrameworks>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Helpers.fs" />
    <Compile Include="LocalProviderTests.fs" />
    <Compile Include="SwapiLocalProviderTests.fs" />
    <Compile Include="SwapiRemoteProviderTests.fs" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="introspection.json" />
    <Content Include="xunit.runner.json" />
  </ItemGroup>

  <ItemGroup>
    <None Include="paket.references" />
    <None Include="operation.graphql">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup Condition="$(OS) == Unix">
    <Content Include="xunit.runner.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <!-- 
    this is needed to ensure the build order in the solution is correct, but we don't
    want to take a reference from this mechanism because the tooling won't
    find the TPDTC correctly (don't know why)
  -->
  <ItemGroup>
    <ProjectReference Include="..\..\src\FSharp.Data.GraphQL.Shared\FSharp.Data.GraphQL.Shared.fsproj">
      <!-- <ReferenceOutputAssembly>false</ReferenceOutputAssembly> -->
    </ProjectReference>
    <ProjectReference Include="..\..\src\FSharp.Data.GraphQL.Client\FSharp.Data.GraphQL.Client.fsproj">
      <!-- <ReferenceOutputAssembly>false</ReferenceOutputAssembly> -->
    </ProjectReference>
  </ItemGroup>

