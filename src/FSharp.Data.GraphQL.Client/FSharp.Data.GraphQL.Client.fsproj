<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <DisableImplicitFSharpCoreReference>true</DisableImplicitFSharpCoreReference>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="AssemblyInfo.fs" />
    <Compile Include="MimeTypes.fs" />
    <Compile Include="TextConversions.fs" />
    <Compile Include="JsonValue.fs" />
    <Compile Include="Extensions.fs" />
    <Compile Include="Schema.fs" />
    <Compile Include="ReflectionPatterns.fs" />
    <Compile Include="Upload.fs" />
    <Compile Include="Serialization.fs" />
    <Compile Include="Locations.fs" />
    <Compile Include="BaseTypes.fs" />
    <Compile Include="GraphQLClient.fs" />
    <Compile Include="GraphQLProviderRuntimeContext.fs" />
    <Compile Include="GraphQLProvider.Runtime.fs" />
    <None Include="FSharp.Data.GraphQL.Client.fsproj.paket.template" />
    <None Include="paket.references" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FSharp.Data.GraphQL.Shared\FSharp.Data.GraphQL.Shared.fsproj" />
    <ProjectReference Include="..\FSharp.Data.GraphQL.Client.DesignTime\FSharp.Data.GraphQL.Client.DesignTime.fsproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <DirsToClean Include="$(OutputPath)" />
    <DirsToClean Include="$(OutputPath)..\typeproviders"/>
  </ItemGroup>

  <Target Name="CopyDTC" AfterTargets="AfterBuild">
    <CreateItem Include="..\FSharp.Data.GraphQL.Client.DesignTime\bin\$(Configuration)\netstandard2.0\*.dll;..\FSharp.Data.GraphQL.Client.DesignTime\bin\$(Configuration)\netstandard2.0\*.pdb">
      <Output TaskParameter="Include" ItemName="DesignTimeBinaries" />
    </CreateItem>
    <Message Text="Copying DesignTime component into $(OutputPath)..\typeproviders\fsharp41\netstandard2.0" Importance="High" />
    <Copy SourceFiles="@(DesignTimeBinaries)" DestinationFolder="$(OutputPath)/../typeproviders/fsharp41/netstandard2.0" />
    <Message Text="Copying DesignTime component into $(OutputPath)" Importance="High" />
    <Copy SourceFiles="@(DesignTimeBinaries)" DestinationFolder="$(OutputPath)" />
  </Target>

  <Target Name="CleanupDTC" AfterTargets="AfterClean">
    <RemoveDir Directories="@(DirsToClean)"/>
  </Target>

  <Import Project="..\..\.paket\Paket.Restore.targets" />
</Project>